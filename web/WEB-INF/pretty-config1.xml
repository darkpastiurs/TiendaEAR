<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

   <!-- Paginas y/o Recursos Publicos -->
    <url-mapping id="inicio">
        <pattern value="/inicio" />
        <view-id value="/public/index.xhtml"/>
    </url-mapping>

    <url-mapping id="logueo">
        <pattern value="/login"/>
        <view-id value="/public/login.xhtml"/>
    </url-mapping>
    <url-mapping id="error403">
        <pattern value="/denegado"></pattern>
        <view-id value="/WEB-INF/errorpages/error403.xhtml"/>
    </url-mapping>
    <!-- Paginas y/o Recursos Publicos [FIN] -->

    <!-- Categoria de Cartas -->
    <url-mapping id="categoriascartas">
        <pattern value="/administracion/categorias"/>
        <view-id value="/administracion/cartas/categorias/listado.xhtml"/>
    </url-mapping>

    <url-mapping id="categoriascartasnuevo" parentId="categoriascartas">
        <pattern value="/nuevo"/>
        <view-id value="/administracion/cartas/categorias/gestion.xhtml"/>
        <action>#{navigationWebBean.redireccionar}</action>
    </url-mapping>

    <url-mapping id="categoriascartaseditar" parentId="categoriascartas">
        <pattern value="/editar/#{navigationWebBean.datoSeleccionado}"/>
        <view-id value="/administracion/cartas/categorias/gestion.xhtml"/>
    </url-mapping>
    <!-- Categoria de Cartas [FIN] -->

    <url-mapping id="atributosmonstruos">
        <pattern value="/administracion/atributos" />
        <view-id value="/administracion/cartas/mounstruos/atributos/listado.xhtml" />
    </url-mapping>

    <url-mapping id="atributosmonstruosgestion" parentId="atributosmonstruos">
        <pattern value="/gestion" />
        <view-id value="/administracion/cartas/mounstruos/atributos/gestion.xhtml" />
    </url-mapping>

    <url-mapping id="tiposmonstruos">
        <pattern value="/administracion/tipos"></pattern>
        <view-id value="/administracion/cartas/mounstruos/tipos/listado.xhtml"/>
    </url-mapping>


    <url-mapping id="tiposmonstruoseditar" parentId="tiposmonstruos">
        <pattern value="/editar/#{nombreTipo: navigationWebBean.datoSeleccionado}"></pattern>
        <view-id value="/administracion/cartas/mounstruos/tipos/gestion.xhtml"/>
    </url-mapping>

    <url-mapping id="tiposmonstruosnuevo" parentId="tiposmonstruos">
        <pattern value="/nuevo"></pattern>
        <view-id value="/administracion/cartas/mounstruos/tipos/gestion.xhtml"/>
        <action>#{navigationWebBean.redireccionar}</action>
    </url-mapping>

</pretty-config>